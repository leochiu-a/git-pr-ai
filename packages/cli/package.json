{
  "name": "git-pr-ai",
  "version": "1.9.14",
  "description": "A tool to automatically extract JIRA ticket numbers from branch names and create GitHub/GitLab PRs",
  "type": "module",
  "bin": {
    "git-open-pr": "./dist/git-open-pr.js",
    "git-update-pr-desc": "./dist/git-update-pr-desc.js",
    "git-pr-review": "./dist/git-pr-review.js",
    "git-pr-ai": "./dist/git-pr-ai.js",
    "git-create-branch": "./dist/git-create-branch.js",
    "git-plan-issue": "./dist/git-plan-issue.js",
    "git-take-issue": "./dist/git-take-issue.js",
    "git-weekly-summary": "./dist/git-weekly-summary.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "postinstall": "test -f dist/postinstall.js && node dist/postinstall.js || echo 'Skipping git alias setup during build'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check . --experimental-cli"
  },
  "keywords": [
    "git",
    "github",
    "gitlab",
    "jira",
    "pull-request",
    "merge-request",
    "automation",
    "ai"
  ],
  "author": "leochiu-a",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leochiu-a/git-pr-ai.git"
  },
  "homepage": "https://github.com/leochiu-a/git-pr-ai#readme",
  "bugs": {
    "url": "https://github.com/leochiu-a/git-pr-ai/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "npm-check-updates": "^19.1.1",
    "ora": "^8.2.0",
    "zx": "^8.7.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitest/ui": "^2.1.8",
    "oxlint": "^1.9.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.2",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
