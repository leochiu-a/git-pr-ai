{
  "version": "1.8.1",
  "description": "A tool to automatically extract JIRA ticket numbers from branch names and create GitHub PRs",
  "type": "module",
  "bin": {
    "git-open-pr": "./dist/git-open-pr.js",
    "git-update-pr-desc": "./dist/git-update-pr-desc.js",
    "git-pr-review": "./dist/git-pr-review.js",
    "git-pr-ai": "./dist/git-pr-ai.js",
    "git-create-branch": "./dist/git-create-branch.js",
    "git-plan-issue": "./dist/git-plan-issue.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter git-pr-ai build",
    "build:docs": "pnpm --filter @git-pr-ai/docs build",
    "dev:docs": "pnpm --filter @git-pr-ai/docs dev",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check . --experimental-cli",
    "prepare": "husky"
  },
  "keywords": [
    "git",
    "github",
    "jira",
    "pull-request",
    "automation"
  ],
  "author": "leochiu-a",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leochiu-a/git-pr-ai.git"
  },
  "homepage": "https://github.com/leochiu-a/git-pr-ai#readme",
  "bugs": {
    "url": "https://github.com/leochiu-a/git-pr-ai/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/node": "^24.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "oxlint": "^1.9.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
